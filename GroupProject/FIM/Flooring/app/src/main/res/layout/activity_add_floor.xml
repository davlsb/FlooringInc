<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".addFloor">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/size"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Size"
                android:imeActionLabel="PIN"
                android:inputType="number"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/color" />

            <TextView
                android:id="@+id/sizeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/size"
                android:text="Which Size?"
                app:layout_constraintBottom_toTopOf="@+id/size"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/colorLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/color"
                android:text="Which Color?"
                app:layout_constraintBottom_toTopOf="@+id/color"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/color"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Color"
                android:imeActionLabel="PIN"
                android:inputType="text"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/storeID" />

            <EditText
                android:id="@+id/storeID"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Store ID"
                android:imeActionLabel="PIN"
                android:inputType="number"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/type" />

            <TextView
                android:id="@+id/storeIDLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/storeID"
                android:text="Which Store?"
                app:layout_constraintBottom_toTopOf="@+id/storeID"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:text="Add New Item"
                android:textSize="28sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/categoryDropdown"
                style="@style/Widget.AppCompat.Spinner.Underlined"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="32dp"
                android:outlineProvider="paddedBounds"
                android:spinnerMode="dropdown"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/floorName" />

            <TextView
                android:id="@+id/pinLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/floorName"
                android:text="Floor Name"
                app:layout_constraintBottom_toTopOf="@+id/floorName"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/type"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Floor Type"
                android:inputType="text"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryDropdown" />

            <EditText
                android:id="@+id/floorName"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="84dp"
                android:ems="10"
                android:hint="Name"
                android:inputType="text"
                android:outlineProvider="paddedBounds"
                android:shadowColor="@color/green_500"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView4" />

            <TextView
                android:id="@+id/typeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/type"
                android:text="Type"
                app:layout_constraintBottom_toTopOf="@+id/type"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/selectCategoryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:layout_marginBottom="4dp"
                android:labelFor="@id/categoryDropdown"
                android:text="Category"
                app:layout_constraintBottom_toTopOf="@+id/categoryDropdown"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="4dp"
                android:backgroundTint="#00FFFFFF"
                android:contentDescription="back Button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.008"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_button_name" />

            <EditText
                android:id="@+id/priceID"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="32dp"
                android:ems="10"
                android:hint="Price $"
                android:imeActionLabel="PIN"
                android:inputType="number"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/size" />

            <TextView
                android:id="@+id/priceLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/priceID"
                android:text="What's the Price?"
                app:layout_constraintBottom_toTopOf="@+id/priceID"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/brandTV"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Brand Name"
                android:imeActionLabel="PIN"
                android:inputType="text"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceID" />

            <EditText
                android:id="@+id/ifStoneOrTile"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="28dp"
                android:ems="10"
                android:hint="Material"
                android:imeActionLabel="PIN"
                android:inputType="text"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.502"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brandTV" />

            <EditText
                android:id="@+id/speciesID"
                style="@style/ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="195dp"
                android:layout_height="63dp"
                android:layout_marginTop="24dp"
                android:ems="10"
                android:hint="Species"
                android:imeActionLabel="PIN"
                android:inputType="text"
                android:outlineProvider="paddedBounds"
                android:password="false"
                android:textAlignment="textStart"
                android:textAllCaps="false"
                android:textSize="16sp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.511"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ifStoneOrTile" />

            <TextView
                android:id="@+id/ifWoodLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="104dp"
                android:labelFor="@id/brandTV"
                android:text="Species"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/speciesID"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/ifStoneOrTileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/brandTV"
                android:text="Material"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@+id/ifStoneOrTile"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/brandLabel2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="108dp"
                android:labelFor="@id/brandTV"
                android:text="Brand"
                app:layout_constraintBottom_toTopOf="@+id/brandTV"
                app:layout_constraintStart_toStartOf="parent" />

            <Switch
                android:id="@+id/waterResistance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginTop="16dp"
                android:paddingBottom="16dp"
                android:text="Water Resistant"
                android:textColor="#676767"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/brandTV" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/doneFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:clickable="true"
            android:contentDescription="Add Floor Confirmation"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@drawable/ic_add_check" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>